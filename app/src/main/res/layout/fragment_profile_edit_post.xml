<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".main.profile.ProfileEditPost">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/main.appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar android:layout_width="wrap_content"
                                                            android:layout_height="match_parent"
                                                            android:id="@+id/profile_toolbar"
        >

        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="274dp"
                android:layout_height="143dp"
                android:orientation="horizontal">


            <ImageView
                    android:id="@+id/imageCurrent"
                    android:layout_width="match_parent" android:layout_height="136dp"
                    android:layout_weight="1" tools:src="@tools:sample/backgrounds/scenic"/>
            <Button
                    android:id="@+id/btnAddPostPhoto"
                    android:layout_width="136dp"
                    android:layout_height="68dp" android:layout_weight="1" android:text="addPhoto"/>
        </LinearLayout>

        <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:ems="10"
                android:hint="Write a caption..."
                android:inputType="textPersonName"/>
        <CheckBox
                android:id="@+id/checkBoxShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:text="Share"/>
        <Button
                android:id="@+id/btnPost"
                android:layout_width="match_parent"
                android:layout_height="76dp" android:text="Post"/>
    </LinearLayout>
</FrameLayout>